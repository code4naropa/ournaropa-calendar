<div id="events" class="new container">

  <div class="row">
    
    <%= link_to events_path, :class => "waves-effect waves-light btn" do %>
      <i class="material-icons left">keyboard_arrow_left</i> Back to Calendar
    <% end %>

  </div>  
  
  <div class="row">
    <h2 class="left-align">Add Event</h2>  
    <div class="divider"></div>
  </div>
    
  <%= form_for(@event, :url => create_event_path(@event)) do |f| %>
  
   <% if @event.errors.any? %>
    <div id="error_explanation">
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>

      <ul class="collection">
      <% @event.errors.full_messages.each do |message| %>
        <li class="collection-item"><%= message %></li>
      <% end %>
      </ul>
    </div>
    <div class="divider"></div>
  <% end %>
  
  <div class="row">
    <div class="input-field col s12">
      
      <i class="material-icons prefix">star</i>
      <%= f.text_field :title, :class => "validate" %>
      <%= f.label :title, "What is the event called?" %><br>
    </div>
  </div>
  
  <div class="row">
    <div class="input-field col s6">
      <i class="material-icons prefix">event</i>
      <%= f.text_field :start_time_text, :class => "validate tooltipped", :data => {:position => "bottom", :delay => "50", :tooltip => "Type 'Tomorrow at 6pm' or '4/21/2016 at 11am'"} %>
      <%= f.label :start_time_text, "When does the event start?" %><br>
    </div>
    <div class="input-field col s6">
      <i class="material-icons prefix">rotate_90_degrees_ccw</i>
      <%= f.text_field :end_time_text, :class => "validate tooltipped", :data => {:position => "bottom", :delay => "50", :tooltip => "Type 'Tomorrow at 6pm' or '4/21/2016 at 11am'"} %>
      <%= f.label :end_time_text, "When does the event end?" %><br>
    </div>
  </div>
  
  <div class="row">
    <div class="input-field col s12">
      
      <i class="material-icons prefix">place</i>
      <%= f.text_field :location, :class => "validate" %>
      <%= f.label :location, "Where will the event happen?" %><br>
    </div>
  </div>

  <div class="row">
    <div class="input-field col s6">
      <i class="material-icons prefix">account_circle</i>
      <%= f.text_field :organizer_name, :class => "validate tooltipped", :data => {:position => "bottom", :delay => "50", :tooltip => "Adding your name gives folks an idea of who is organizing this event"}  %>
      <%= f.label :organizer_name, "What is your name / the name of the event organizer? (Optional)" %><br>
    </div>
    <div class="input-field col s6">
      <i class="material-icons prefix">email</i>
      <%= f.text_field :organizer_email, :class => "validate tooltipped", :data => {:position => "bottom", :delay => "50", :tooltip => "Adding your email address allows people to get in touch with you with questions"}  %>
      <%= f.label :organizer_email, "What is your / the organizer's email address? (Optional)" %><br>
    </div>
  </div>  
  
  <div class="row">
    <div class="input-field col s12">
      
      <i class="material-icons prefix">description</i>
      <%= f.text_area :description, :class => "materialize-textarea" %>
      <%= f.label :description, "Anything else? (Optional)" %>
    </div>
  </div>
  
  <div class="row">
    <div class="col s12 center-align">
      <button class="btn-large red waves-effect waves-light" type="submit" name="action">Add Event
        <i class="material-icons right">check</i>
      </button>    
    </div>
  </div>
  
  
  <% end %>
  
</div>